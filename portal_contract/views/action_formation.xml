<!--                  action="action_formation_list_action"-->
<!--                  groups="base.group_system"-->
<!--                  sequence="3"/>-->

        <record model="ir.ui.menu" id="contacts.res_partner_menu_config">
            <field name='sequence'>4</field>
        </record>

    </data>
</odoo>