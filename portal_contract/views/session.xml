<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mcm_portal_view_mcm_session_form" model="ir.ui.view">
        <field name="name">mcm.session.form</field>
        <field name="model">mcm.session</field>
        <field name="inherit_id" ref="mcm_add_fields.session_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="before">
                <field name="name"/>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="action_type"/>
                <field name="price_untaxed" invisible="1"/>
                <field name="currency_id" invisible="1"/>
                <field name="targeted_diploma"/>
                <field name="start_hour"  placeholder="e.x. 09:00"/>
                <field name="end_hour"  placeholder="e.x. 12:30"/>
                <field name="start_second_hour"  placeholder="e.x. 13:30"/>
                <field name="end_second_hour"  placeholder="e.x. 17:00"/>
            </xpath>
        </field>
    </record>
    <record id="mcm_portal_view_mcm_session_tree" model="ir.ui.view">
        <field name="name">mcm.session.tree</field>
        <field name="model">mcm.session</field>
        <field name="inherit_id" ref="mcm_add_fields.session_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="before">
                <field name="name"/>
            </xpath>
        </field>
    </record>
</odoo>