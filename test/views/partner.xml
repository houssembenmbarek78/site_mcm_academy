<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- ajouter  instructor field à une vue existante -->

   <record model="ir.ui.view" id="partner_tree_view">
        <field name="name">Partners</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"></field>
        <field name="arch" type="xml">

                <xpath expr="//field[@name='email']" position="before">
                <field name="firstName"/>
                <field name="lastName"/>
                </xpath>
                <xpath expr="//field[@name='email']" position="after">
                <field name="statut_client"/>
                   </xpath>

        </field>

    </record>

    <record model="ir.ui.view" id="partner_instructor_form_view">
        <field name="name">Apprenants</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"></field>
        <field name="arch" type="xml">
            <xpath expr="//form//sheet" position="before">
                <header>
                    <button name="createuser" string="Créer" type="object"/>
                     <button name="createtest" string="Créer test" type="object"/>
                     <button name="getusers" string="récupérer stats" type="object"/>
                     <button name="post" string="Ajouter sur 360-learning" type="object"/>
                </header>
            </xpath>
             <xpath expr="//field[@name='email']" position="after">

                 <field name="statut_client" ></field>
             </xpath>
             <xpath expr="//page[@name='internal_notes']" position="after">
                <page string="Statistique">
                    <group>

                        <field name="last_login"></field>
                        <field name="averageScore"></field>
                        <field name="totalTimeSpentInMinutes"></field>

                    </group>
                </page>
            </xpath>


        </field>

    </record>

<!--    <record model="ir.actions.act_window" id="contact_list_action">-->
