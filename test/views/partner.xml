<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- ajouter  instructor field à une vue existante -->


    <record model="ir.ui.view" id="partner_instructor_form_view">
        <field name="name">hello</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"></field>
        <field name="arch" type="xml">
            <xpath expr="//form//sheet" position="before">
                <header>
                    <button name="createuser" string="Créer" type="object"/>
                     <button name="createtest" string="Créer test" type="object"/>
                     <button name="getusers" string="récupérer stats" type="object"/>
                     <button name="post" string="Ajouter sur 360learning" type="object"/>
                </header>
            </xpath>
             <xpath expr="//page[@name='internal_notes']" position="after">
                <page string="Statistique">
                    <group>

                        <field name="last_login"></field>
                        <field name="averageScore"></field>
                         <field name="totalTimeSpentInMinutes"></field>

                    </group>
                </page>
            </xpath>


        </field>

    </record>

    <record model="ir.actions.act_window" id="contact_list_action">
        <field name="name">Contacts</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="configuration_menu" name="configuration"
              parent="main_open_academy_menu"/>
    <menuitem id="contact_menu" name="Contacts"
              parent="configuration_menu"/>

    <record model="ir.actions.act_window" id="contact_cat_list_action">
        <field name="name">Contact tags</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>

    </record>

    <menuitem id="contact_cat_menu" name="caontact_cat"
              parent="configuration_menu"
              action="contact_cat_list_action">

    </menuitem>
    <record model="res.partner" id="teacher1">
        <field name="name">Teacher/ level1</field>
    </record>
    <record model="res.partner" id="teacher2">
        <field name="name">Teacher/ level2</field>
    </record>
    <act_window id="lounch_session_wizard"
                name="Ajouter participants"
                binding_model="test.partner"
                res_model="test.wizard"
                view_mode="form"
                target="new">

    </act_window>

</odoo>