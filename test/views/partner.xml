    <record model="ir.actions.act_window" id="contact_list_action">
        <field name="name">Les Apprenants</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>

    </record>

    <menuitem id="contact_menu" name="Apprenants"
              parent="statistique_menu"
              action="contact_list_action">

    </menuitem>
    <record model="res.partner" id="teacher1">
        <field name="name">Teacher/ level1</field>
    </record>
    <record model="res.partner" id="teacher2">
        <field name="name">Teacher/ level2</field>
    </record>
    <act_window id="lounch_session_wizard"
                name="Ajouter participants"
                binding_model="test.partner"
                res_model="test.wizard"
                view_mode="form"
                target="new">

    </act_window>

</odoo>