<odoo>
    <template id="mcmacademy_website_sale_product" inherit_id="website_sale.product">
        <xpath expr="//a[@id='add_to_cart']" position="replace">
                <a t-if="request.website.is_public_user()==False and modules" role="button" id="add_to_cart"
                   class="btn btn-primary btn-lg mt16 js_check_product a-submit d-block d-sm-inline-block" href="#">
                    <i class="fa fa-shopping-cart"/>
                    Ajouter au panier
                </a>
                <a t-if="request.website.is_public_user()==False and not modules" role="button" id="helpdesk" class="btn btn-outline-primary btn-lg mt16 d-block d-sm-inline-block"
                   t-attf-href="/helpdesk">
                    <i class="fa fa-bolt"/>
                    Contactez-nous
                </a>
        </xpath>
        <xpath expr="//a[@id='add_to_cart']" position="before">
            <div style="margin:auto;background-color:#fff;border-color:#585959;"
                 t-if="request.website.is_public_user()==False">
                <p t-if="modules">
                    <b>
                        Choisissez une session

                        <br/>
                        <div style="margin-left:0%;">
                            <select name="module" class="form-control search-slt " t-if="modules">
                               <option value="all">Liste des sessions</option>
                                <t t-foreach="modules" t-as="module">
                                    <t t-if="module">
                                       <t t-if="module.website_published==True">
                                            <b>
                                                <option t-att-value="module.id">
                                                    <t t-esc="module.date_debut"/>
                                                    au
                                                    <t t-esc="module.date_fin"/>
                                                </option>
                                            </b>
                                        </t>
                                    </t>
                                </t>
                            </select>
                            <p t-if="error_session!=''" class="alert alert-warning" style="margin-left:0%;">
                                Vous devez Selectionnez une date
                            </p>
                        </div>
                    </b>

                </p>

            </div>
        </xpath>
    </template>
    <template id="mcmacademy_product_price" inherit_id="website_sale.product_price">
        <xpath expr="//h4[hasclass('oe_price_h4')]" position="replace">
            <span class="text-muted" t-if="request.website.is_public_user()==True">Vous devez s'inscrire pour consulter
                le prix de formation
            </span>
        </xpath>
    </template>
