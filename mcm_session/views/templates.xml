<odoo>
    <template id="mcmacademy_website_sale_product" inherit_id="website_sale.product">
        <xpath expr="//a[@id='add_to_cart']" position="before">
            <div style="margin:auto;background-color:#fff;border-color:#585959;"
                 t-if="request.website.is_public_user()==False">
                <p t-if="modules">
                    <b>
                        Choisissez une session
                        <br/>
                        <br/>
                        <div style="margin-left:0%;">
                            <select name="module" class="form-control search-slt " t-if="modules">
                                <t t-foreach="modules" t-as="module">
                                    <t t-if="module">
                                        <b>
                                            <option t-att-value="module.id" selected="selected">
                                                <t t-esc="module.date_debut"/>
                                                au
                                                <t t-esc="module.date_fin"/>
                                            </option>
                                        </b>
                                    </t>
                                </t>
                            </select>
                        </div>
                    </b>
                </p>
            </div>
        </xpath>
    </template>
    <template id="mcmacademy_product_price" inherit_id="website_sale.product_price">
        <xpath expr="//h4[hasclass('oe_price_h4')]" position="replace">
            <span class="text-muted" t-if="request.website.is_public_user()==True">Vous devez s'inscrire pour consulter
                le prix de formation
            </span>
        </xpath>
    </template>
    <template id="mcmacademy_portal_my_home" inherit_id="portal.portal_my_home">
        <xpath expr="//div[2]" position="after">
            <br/>
            <!-- DÃ©but de widget en ligne Calendly -->
            <div class="calendly-inline-widget" data-url="https://calendly.com/mcm-academy"
                 style="min-width:320px;height:630px;"></div>
            <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js"></script>
            <!-- Fin de widget en ligne Calendly -->
        </xpath>
    </template>
</odoo>