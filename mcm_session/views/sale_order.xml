<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mcmacademy_session_view_sale_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="session_id" string="Session"/>
                <field name="module_id"
                       domain="[('session_id', '=', session_id)]"/>
            </xpath>
            <xpath expr="//div[hasclass('o_td_label')][1]" position="replace">
                <div class="o_td_label"
                     attrs="{'invisible': [('state', 'in', ['sale', 'done', 'cancel'])]}">
                    <label for="date_order" string="Date du devis"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='date_order'][1]" position="replace">
                <field name="date_order" nolabel="1" string="Date de devis"
                       attrs="{'invisible': [('state', 'in', ['sale', 'done', 'cancel'])]}"/>
            </xpath>
        </field>
    </record>
</odoo>