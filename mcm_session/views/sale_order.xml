<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mcmacademy_session_view_sale_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="session_id" string="Session"/>
                <field name="module_id"
                       domain="[('session_id', '=', session_id)]"/>
            </xpath>
            <xpath expr="//header//button[@name='action_draft']" position="after">
                <button name="action_link_contract" type="object" string="Lier contrats avec modules"/>
            </xpath>
            <xpath expr="//field[@name='date_order'][1]" position="replace">
                <field name="date_order" nolabel="1"
                       attrs="{'invisible': [('state', 'in', ['sale', 'done', 'cancel'])]}"/>
            </xpath>
        </field>
    </record>
</odoo>