<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="digimoov_sign_template_form" model="ir.ui.view">
        <field name="name">sign.template.form</field>
        <field name="model">sign.template</field>
        <field name="inherit_id" ref="sign.sign_template_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='privacy']" position="after">
                <field name="company_id"/>
            </xpath>
        </field>
    </record>
    <template id="Digimoov Document Sign" inherit_id="sign.doc_sign" name="Document Sign">
        <xpath expr="//meta" position="replace">
            <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=yes"/>
            <title t-esc="'Remplissage Document'"/>
        </xpath>
        <xpath expr="//t[1]" position="attributes">
            <attribute name="t-name">Remplissage Document</attribute>
        </xpath>
    </template>
</odoo>