<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="marketing_automation_view_crm_lead_kanban" model="ir.ui.view">
        <field name="name">crm.lead.kanban</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_kanban_content')]" position="replace">
                <div class="oe_kanban_content">
                    <div>
                        <strong class="o_kanban_record_title" style="font-weight: bold; color:#00A09D;">
                            <field name="name"/>
                        </strong>
                    </div>
                    <div>
                      <span></span>
                    </div>
                    <div>
                          <label for="num_dossier" attrs="{'invisible': [('num_dossier', '=', '')]}">Dossier CPF:</label>
                        <field name="num_dossier" attrs="{'invisible': [('num_dossier', '=', '')]}"/>

                    </div>
                    <div>
                        <label for="num_tel" attrs="{'invisible': [('num_tel', '=',False)]}">Téléphone:</label>
                        <field name="num_tel" attrs="{'invisible': [('num_tel', '=',False)]}"/>


                    </div>
                    <div>
                        <label for="email" attrs="{'invisible': [('email', '=',False)]}">Email:</label>
                        <field name="email"  attrs="{'invisible': [('email', '=',False)]}"/>
                    </div>
                     <div>
                        <label for="description" attrs="{'invisible': [('description', '=',False)]}">Motif:</label>
                        <field name="description"  attrs="{'invisible': [('description', '=',False)]}"/>
                    </div>


                    <div class="o_kanban_record_bottom">

                    </div>
                </div>

            </xpath>
        </field>
    </record>

     <record id="marketing_automation_view_crm_lead_form" model="ir.ui.view">
        <field name="name">crm.lead.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">

        </field>
    </record>



</odoo>

