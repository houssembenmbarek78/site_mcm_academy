<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="marketing_automation_view_crm_lead_kanban" model="ir.ui.view">
        <field name="name">crm.lead.kanban</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
        <field name="arch" type="xml">

            <xpath expr="//div[hasclass('oe_kanban_content')]" position="replace">
                <div class="oe_kanban_color_0 oe_kanban_global_click o_kanban_record oe_kanban_card_muted"
                     t-if="record.num_dossier.raw_value ==''" style=" background-color: #FBEDC9;">
                    <div class="oe_kanban_content">
                        <div>
                            <strong class="o_kanban_record_title" style="font-weight: bold; font-size:17px; color:#00A09D;">
                                <field name="name"/>
                            </strong>
                        </div>
                        <div>
                            <strong class="o_kanban_record_title" style="font-weight: bold;">Personnel</strong>

                        </div>
                         <div>-</div>
                        <div>
                             <i class="fa fa-address-book-o" attrs="{'invisible': [('num_dossier', '=', '')]}">
                            </i>
                            <field name="num_dossier" attrs="{'invisible': [('num_dossier', '=', '')]}"/>

                        </div>
                        <div>
                            <i   class="fa fa-phone" attrs="{'invisible': [('num_tel', '=',False)]}"> </i>
                            <field name="num_tel" attrs="{'invisible': [('num_tel', '=',False)]}"/>
                        </div>
                        <div>
                            <i class="fa fa-envelope" attrs="{'invisible': [('email', '=',False)]}"> </i>
                            <field name="email" attrs="{'invisible': [('email', '=',False)]}"/>
                        </div>
                        <div class="o_kanban_record_bottom">
                         <div>
                         <field name="description"  attrs="{'invisible': [('description', '=',False)]}"/>

                         </div>
                        </div>
                    </div>
                </div>
                <div class="oe_kanban_color_0 oe_kanban_global_click o_kanban_record oe_kanban_card_muted" t-if="record.num_dossier.raw_value !=''" style="background-color: #D2E9E1;">
                    <div class="oe_kanban_content">
                        <div>
                            <strong class="o_kanban_record_title" style="font-weight: bold; font-size:17px; color:#00A09D;">
                                <field name="name"/>
                            </strong>
                        </div>
                        <div>
                            <strong class="o_kanban_record_title" style="font-weight: bold;">CPF</strong>
                        </div>
                        <div>-</div>
                        <div>
                             <i class="fa fa-address-book-o" attrs="{'invisible': [('num_dossier', '=', '')]}">
                            </i>
                            <field name="num_dossier" attrs="{'invisible': [('num_dossier', '=', '')]}"/>

                        </div>
                        <div>
                            <i   class="fa fa-phone" attrs="{'invisible': [('num_tel', '=',False)]}"> </i>
                            <field name="num_tel" attrs="{'invisible': [('num_tel', '=',False)]}"/>
                        </div>
                        <div>
                            <i class="fa fa-envelope" attrs="{'invisible': [('email', '=',False)]}"> </i>
                            <field name="email" attrs="{'invisible': [('email', '=',False)]}"/>
                        </div>
                        <div class="o_kanban_record_bottom">
                         <div>
                             <field name="description"  attrs="{'invisible': [('description', '=',False)]}"/>
                         </div>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>

    <record id="crm_lead_marketing_view_form" model="ir.ui.view">
        <field name="name">crm.lead.marketing</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_set_won_rainbowman']" position="replace"/>
            <xpath expr="//header/button[@name='426']" position="replace"/>
            <xpath expr="//header/button[@name='427']" position="replace"/>
            <xpath expr="//header/button[@name='toggle_active']" position="replace"/>
            <xpath expr="//group//group[5]" position="replace">

                <group>
                    <field name="team_id" invisible="1"></field>
                    <field name="user_id" invisible="1"></field>
                </group>
            </xpath>
            <xpath expr="//group//group[4]" position="replace">
            </xpath>
            <xpath expr="//field[@name='planned_revenue']" position="replace">

            </xpath>


        </field>
    </record>
</odoo>

