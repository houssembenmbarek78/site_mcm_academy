<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    inherit l'interface form des notes et examens dans la session pour ajouter les villes-->
    <record id="inherit_info_examen_form" model="ir.ui.view">
        <field name="name">info.examen.form</field>
        <field name="model">info.examen</field>
        <field name="inherit_id" ref="partner_exam.notes_des_examens_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="ville_id"/>
            </field>
        </field>
    </record>
    <!--    inherit vue tree des notes et examens dans la session pour ajouter les villes-->
    <record id="inherit_info_examen_tree_view" model="ir.ui.view">
        <field name="name">info.examen.form</field>
        <field name="model">info.examen</field>
        <field name="inherit_id" ref="partner_exam.collecte_info_tree_view"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="ville_id"/>
            </field>
        </field>
    </record>
    <!--    inherit la vue search pour faire le groupement selon les villes a partir de notes et examens-->
    <record id="inherit_info_examen_search" model="ir.ui.view">
        <field name="name">info.examen.search</field>
        <field name="model">info.examen</field>
        <field name="inherit_id" ref="partner_exam.info_examen_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]" position="inside">
                <filter string="Ville" name="ville_id" context="{'group_by':'ville_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>