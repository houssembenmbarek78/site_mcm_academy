<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mcm_view_digiforma_res_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page string="Digiforma" name="digiforma_sessions" attrs="{'invisible': [('from_digiforma', '=', False)]}" groups="base.group_user">
                    <group name="digiforma_sessions">
                        <field name="from_digiforma" invisible="1"/>
                        <field name="digiforma_sessions" />
                        <br/>
                        <br/>
                        <field name="note_digiforma" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>