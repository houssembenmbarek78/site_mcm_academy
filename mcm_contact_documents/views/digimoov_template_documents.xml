<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="mcm_contact_document_charger_mes_documents" name="Charger mes documents| Digimoov">
        <t t-call="website.layout">
            <t t-set="additional_title">Charger mes documents| Digimoov</t>
            <div id="wrap" class="oe_structure oe_empt">
                <div class="container">
                    <div class="row">
                        <div class="row m-0">
                            <div class="col-lg-6">
                                <div class="card-shadow ">
                                    <img src="/mcm_contact_documents/static/img/3 Dossier d'insciption Digimoov.webp"
                                         class="img-responsive img img-fluid"
                                         data-original-title="" title="" aria-describedby="tooltip508208"/>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="contact-box ">
                                    <center>
                                        <span style="font-size: 28px;">CHARGER MES DOCUMENTS</span>
                                    </center>
                                    <br/>
                                    <form action="/upload_my_files" method="post" id="digimoov_my_documents_form"
                                          class="s_website_form container-fluid mt32" enctype="multipart/form-data"
                                          data-model_name="partner.document"
                                          data-success_page="/submitted_documents" data-editable-form="false"
                                          hide-change-model="true">
                                        <div class="row" style="padding-left:7%;padding-right:7%;">
                                            <div class="form-group row form-field o_website_form_required">
                                                <div class="col-lg-12 col-md-12">
                                                <label class="col-form-label">Pièce d'identité recto/verso</label>
                                            </div>
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                <div>
                                                    <label>Charger la piéce d'identité recto :</label>
                                                    <input type="file" name="identity" required="1" id="identity"
                                                           label="Piéce d'identité Recto :"
                                                           title="Veuillez Charger la Piéce d'identité Recto (Taille Max : 4 MO)"
                                                           class="form-control o_website_form_input"
                                                           accept="image/*"/>
                                                </div>
                                            </div>
                                            <br></br>
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                <div>
                                                    <label>Charger la piéce d'identité verso:</label>
                                                    <input type="file" name="identity2" required="1" id="identity2"
                                                           label="Piéce d'identité Verso :"
                                                           title="Veuillez Charger la Piéce d'identité Verso (Taille Max : 4 MO)"
                                                           class="form-control o_website_form_input"
                                                                                                   accept="image/*"/>
                                                </div>
                                            </div>
                                               </div>
                                            <br></br>
                                            <div class="form-group row form-field o_website_form_required">
                                            <div class="col-lg-9 col-md-12 col-sm-12">
                                            <input type="checkbox" name="confirm_identity" id="confirm_identity" required="1"/>
                                            <label for="confirm_identity" style="margin-left:8px;font-weight:normal !important;display:unset !important;">
                                            </label>
                                            </div>
                                            </div>
                                            <div class="form-group row form-field o_website_form_required">
                                            <div class="col-lg-9 col-md-12 col-sm-12">
                                                <label class="col-form-label" for="number">N°Pièce d'identité</label>
                                            </div>
                                            <div class="col-lg-9 col-md-12 col-sm-12">
                                                <input type="text" class="form-control o_website_form_input"
                                                       name="identity_number"
                                                       required="0"/>
                                            </div>
                                        </div>
                                      </div>
                                        <div class="form-group row">
                                            <div class="col-md-8 col-lg-7">
                                                <button type="submit" class="btn btn-primary centered-content"
                                                        id="upload_my_files"
                                                        style="width: 100% !important;">
                                                    Envoyer
                                                    <span class="fa fa-1x fa-fw fa-long-arrow-right ml-1"></span>
                                                </button>
                                                <span id="o_website_form_result"></span>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>