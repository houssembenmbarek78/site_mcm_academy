<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="mcm_contact_document_charger_mes_documents" name="Charger mes documents| Digimoov">
        <t t-call="website.layout">
            <t t-set="additional_title">Charger mes documents| Digimoov</t>
            <div id="wrap" class="oe_structure oe_empt">
                <div class="container">
                    <center>
                        <div class="wrapper">
                            <p>
                                <h1 style="font-size: 4vmin;text-align: center;line-height: 1;color: #333;">
                                    <b>Chargez Vos Documents</b>
                                </h1>
                            </p>
                        </div>
                    </center>
                    <form action="/upload_my_files" method="post" id="digimoov_my_documents_form"
                          class="s_website_form container-fluid mt32" enctype="multipart/form-data"
                          data-model_name="partner.document"
                          data-success_page="/submitted_documents" data-editable-form="false"
                          hide-change-model="true">
                        <div class="form-group row form-field o_website_form_required">
                            <div class="col-lg-9 col-md-9">
                                <label class="col-form-label" for="identity">Carte d'identité Recto/Verso</label>
                            </div>
                            <div class="col-lg-9 col-md-12 col-sm-12">
                                <input type="file" name="identity" required="1" id="identity"
                                       placeholder="Veuillez Charger 1 fichier Recto verso ou 2 fichiers "
                                       class="form-control o_website_form_input" multiple="true"
                                       accept="image/*,application/pdf"/>
                            </div>
                        </div>
                        <div class="form-group row form-field o_website_form_required">
                            <div class="col-lg-9 col-md-12 col-sm-12">
                                <input type="checkbox" name="confirm_identity" id="confirm_identity" required="1"/>
                                <label for="confirm_identity" style="margin-left:8px;font-weight:normal !important;">
                                    Je confirme avoir soumis le recto et le verso
                                </label>
                            </div>
                        </div>
                        <div class="form-group row form-field o_website_form_required">
                            <div class="col-lg-9 col-md-12 col-sm-12">
                                <label class="col-form-label" for="number">N°Carte d'identité</label>
                            </div>
                            <div class="col-lg-9 col-md-12 col-sm-12">
                                <input type="text" class="form-control o_website_form_input"
                                       name="identity_number"
                                       required="0"/>
                            </div>
                        </div>
                        <div class="form-group row form-field o_website_form_required">
                            <div class="col-lg-9 col-md-12 col-sm-12">
                                <label class="col-form-label" for="address_proof">Jusitificatif à domicile Recto/Verso
                                </label>
                            </div>
                            <div class="col-lg-9 col-md-12 col-sm-12">
                                <input type="file" name="address_proof" required="1" id="address_proof"
                                       class="form-control o_website_form_input" multiple="true"
                                       accept="image/*,application/pdf"/>
                            </div>
                        </div>
                        <div class="form-group row form-field o_website_form_required">
                            <div class="col-lg-9 col-md-12 col-sm-12">
                                <label class="col-form-label" for="check_domicile">Vous avez un justificatif de
                                    domicile à votre nom ?
                                </label>
                            </div>
                            <div class="col-lg-12 col-md-12" align="left">
                                <label for="check_domicile_checked">Oui</label>
                                <input type="radio" name="check_domicile" id="check_domicile_checked"
                                       required="1" value="Oui" onclick="checkDomicile()">
                                </input>
                                <label for="check_domicile_not_checked" style="margin-left:12px">Non</label>
                                <input type="radio" name="check_domicile" id="check_domicile_not_checked"
                                       required="1" value="Non" onclick="checkDomicile()" selected="1">
                                </input>
                            </div>
                        </div>
                        <div class="form-group row form-field" style="display: none;"
                             id="o_website_form_identity_hebergeur">
                            <div class="col-lg-9 col-md-12 col-sm-12">
                                <label class="col-form-label" for="identity_hebergeur">Carte d'identité hébergeur
                                </label>
                            </div>
                            <div class="col-lg-9 col-md-12 col-sm-12">
                                <input type="file" name="identity_hebergeur" id="identity_hebergeur"
                                       required="0" multiple="true"
                                       class="form-control o_website_form_input"
                                       accept="image/*,application/pdf"/>
                            </div>
                        </div>
                        <div class="form-group row form-field" style="display: none;"
                             id="o_website_form_attestation_hebergeur">
                            <div class="col-lg-9 col-md-12 col-sm-12">
                                <label class="col-form-label" for="attestation_hebergeur">Attestation d'hébergement
                                </label>
                            </div>
                            <div class="col-lg-9 col-md-12 col-sm-12">
                                <input type="file" name="attestation_hebergeur" id="attestation_hebergeur"
                                       required="0"
                                       class="form-control o_website_form_input"
                                       accept="image/*,application/pdf"/>
                            </div>
                        </div>
                        <div class="form-group row form-field o_website_form_required">
                            <div class="col-lg-9 col-md-9">
                                <label class="col-form-label" for="identity">Cerfa</label>
                            </div>
                            <div class="col-lg-9 col-md-12 col-sm-12">
                                <input type="file" name="cerfa" required="1" id="cerfa"
                                       placeholder="Veuillez Charger 1 fichier Recto verso ou 2 fichiers "
                                       class="form-control o_website_form_input" multiple="true"
                                       accept="image/*,application/pdf"/>
                            </div>
                        </div>
                        <div class="form-group row form-field o_website_form_required">
                            <div class="col-lg-9 col-md-12 col-sm-12">
                                <input type="checkbox" name="confirm_cerfa" id="confirm_cerfa" required="1"/>
                                <label for="confirmation" style="margin-left:8px;font-weight:normal !important;">
                                    Je confirme avoir rempli et signé le cerfa
                                </label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="offset-lg-6 offset-md-6 col-md-8 col-lg-7">
                                <button type="submit" class="btn btn-primary" id="submit_documents">
                                    Envoyez
                                </button>
                                <span id="o_website_form_result"></span>
                            </div>
                        </div>
                    </form>
                    <script>
                        function checkDomicile() {
                        var domic_checked= document.getElementById('check_domicile_checked');
                        var domic_not_checked= document.getElementById('check_domicile_not_checked');
                        var domic_identity_hebergeur= document.getElementById('o_website_form_identity_hebergeur');
                        var domic_attestation_hebergeur= document.getElementById('o_website_form_attestation_hebergeur');
                        var identity_hebergeur = document.getElementById('identity_hebergeur');
                        var attestation_hebergeur = document.getElementById('attestation_hebergeur');
                        if(domic_checked.checked){
                        if(domic_identity_hebergeur) {
                        domic_identity_hebergeur.style.display='none';
                        domic_identity_hebergeur.className='form-group row form-field';
                        identity_hebergeur.required = 0;
                        }
                        if(domic_attestation_hebergeur) {
                        domic_attestation_hebergeur.style.display='none';
                        domic_attestation_hebergeur.className='form-group row form-field';
                        attestation_hebergeur.required = 0;
                        }
                        }
                        if(domic_not_checked.checked){
                        if(domic_identity_hebergeur) {
                        domic_identity_hebergeur.style.display='block';
                        domic_identity_hebergeur.className='form-group row form-field o_website_form_required';
                        identity_hebergeur.required = 1;
                        }
                        if(domic_attestation_hebergeur) {
                        domic_attestation_hebergeur.style.display='block';
                        domic_attestation_hebergeur.className='form-group row form-field o_website_form_required';
                        attestation_hebergeur.required = 1;
                        }
                        }
                        };
                    </script>
                </div>
            </div>
        </t>
    </template>
</odoo>