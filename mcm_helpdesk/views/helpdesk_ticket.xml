<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mcm_helpdesk_ticket_view_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sla_deadline']" position="after">
                <field name="invoice_id" invisible="1" readonly="1"/>
            </xpath>
            <xpath expr="//button[@name='assign_ticket_to_self']" position="after">
                <button string="Relancer le paiement"
                        name="restart_paiement"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible' : [('invoice_id', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>