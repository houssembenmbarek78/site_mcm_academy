<!-- product item template 1 -->
<template id="sh_emate_product_item_dynamic_tmpl_1" name="Product item Dynamic 1">
      <div class="js_cls_sh_mail_snippet_general">
	      <table align="center" cellspacing="0" cellpadding="0" class="o_mail_table_styles o_mail_v_padding o_mail_col_table two_col pt0">
		       <tbody>
		            <tr>
		              
		              	<t t-if="products">
           				<t t-foreach="products" t-as="product">
		              
			                  <td class="o_mail_col_mv o_mail_col_container plr10 width200 text-center">
			                      <div>
					                    <a itemprop="url" t-att-href="base_url + '/shop/product/%s' %(product.id)">
						                    <span t-field="product.image_1920"
						                        t-options="{'widget': 'image', 'preview_image': 'image_1024'}"
						                        class="d-flex h-100 justify-content-center align-items-center d-block mx-auto"/>
					                    </a> 
					                     <p class="text-center o_mail_no_margin o_default_snippet_text">
								           	<a itemprop="name" t-att-href="base_url + '/shop/product/%s' %(product.id)" t-att-content="product.name" t-field="product.name" />    
				                         </p>
			                            <a t-att-href="base_url + '/shop/product/%s' %(product.id)" class="btn_buynow">BUY NOW</a>
			                      
			                      </div>
			                  </td>
		
						</t>
						</t>
		
		           </tr>
		       </tbody>
		</table>
	</div>
</template>

