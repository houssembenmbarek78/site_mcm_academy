<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>


		<!-- FORM -->
		<record id="sh_emate_config_settings_form" model="ir.ui.view">
			<field name="name">sh.emate.config.settings.form</field>
			<field name="model">sh.emate.config.settings</field>
			<field name="arch" type="xml">
				<form string="Emate Config Settings" create="false"
					delete="false">
					
					<sheet>
						<field name="name" invisible="1"/>
						<group>
							<group>
							
								<field name="sh_emate_theme1_color_primary" widget="color" />
								<field name="sh_emate_theme1_color_secondary" widget="color" />
								<field name="sh_emate_theme1_color_extra_color_1" widget="color" />
								<field name="sh_emate_theme1_color_extra_color_2" widget="color"/>
								<field name="sh_emate_theme1_color_extra_color_3" widget="color" />
								<field name="sh_emate_theme1_color_extra_color_4" widget="color" />
									
								<field name="sh_emate_theme1_color_text_header" widget="color" />
								<field name="sh_emate_theme1_color_text_content" widget="color" />
								
																	
										
							</group>
						</group>
												
					</sheet>

				</form>
			</field>
		</record>


		<!-- ACTION -->
		<record id='sh_emate_config_settings_action' model='ir.actions.act_window'>
			<field name="name">Mass Mailing Theme Settings</field>
			<field name="res_model">sh.emate.config.settings</field>
			<field name="view_mode">form</field>
			<field name="res_id">1</field>
		</record>

		<!-- MENU ITEM -->
		<menuitem id="sh_emate_config_settings_menuitem"
			action="sh_emate_config_settings_action"
			parent="mass_mailing.mass_mailing_configuration"
			sequence="10" />


	</data>
</odoo>   