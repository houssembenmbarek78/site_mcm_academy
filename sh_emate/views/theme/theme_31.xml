<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Theme "solar" default template -->
    <template id="theme_tmpl_31">
        
        <!-- banner -->

        <div class="o_mail_block_banner" id="sh_banner_31" data-name="Banner">
            <div class="o_mail_snippet_general">
                <table align="center" cellspacing="0" cellpadding="0" border="0" class="o_mail_table_styles">
                    <tbody>
                        <tr>
                            <td width="100%" valign="top" class="o_mail_full_width_padding o_mail_no_colorpicker bg_img">
                                <a href="#">
                                    <img src="/sh_emate/static/src/img/tmpl_31/banner.png" class="d-block mx-auto banner_img" alt="Your Banner Image" />
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- end banner -->

 		<!-- event -->
 		<div class="o_mail_block_event" data-name="Centered" id="sh_event_31">
            <div class="o_mail_snippet_general">
                <table align="center" cellspacing="0" cellpadding="0" border="0" class="o_mail_table_styles o_mail_h_padding">
                    <tbody>
                        <tr>
                        	<td valign="center" width="100%" class="p10 text-center o_mail_col_mv o_mail_col_container o_mail_h_padding o_mail_v_padding sh_heading">
                        		<div class="heading_top">
                        			<img src="/sh_emate/static/src/img/tmpl_31/frame_1.png" alt="heading_bottom_img" />
                                 </div>
                             </td>
                          </tr>
                          <tr>
                             <td valign="center" width="100%" class="p10 text-center o_mail_col_mv o_mail_col_container o_mail_h_padding o_mail_v_padding sh_content">
                             	<div class="venue_part">
	                                <h2>Venue</h2>
	                                <p>905, Corpomate Levels, Ayodhya Chowk, <br/>150ft. Ring Road, Rajkot.</p>
	                            </div>
                            </td>
                          </tr>
                          <tr>
                             <td valign="center" width="100%" class="p10 text-center o_mail_col_mv o_mail_col_container o_mail_h_padding o_mail_v_padding sh_content">
                             	<div class="timing_part">
	                                <h2>Date &amp; Time</h2>
	                                <p>Thursday, 31st December, 2020 <br/> @ 6PM In The Evening
	                                </p>
	                            </div>
                            </td>
                          </tr>
                          <tr>
                             <td valign="center" width="100%" class="p10 text-center o_mail_col_mv o_mail_col_container o_mail_h_padding o_mail_v_padding sh_content">
                             	<div class="hosted_part">
	                                <h2>Host By</h2>
	                                <p>Softhealer Technologies</p>
	                                <p>+91 7985575681</p>
	                                <a href="#"><p>info@softhealer.com</p></a>
	                            </div>
                            </td>
                          </tr>
                          
                          <tr>
                        	<td valign="center" width="100%" class="p10 text-center o_mail_col_mv o_mail_col_container o_mail_h_padding o_mail_v_padding sh_heading">
                        		<div class="heading_bottom">
                        			<img src="/sh_emate/static/src/img/tmpl_31/frame_2.png" alt="heading_bottom_img" />
                                 </div>
                             </td>
                          </tr>
                    </tbody>
                </table>
            </div>
        </div>
 		<!-- end event -->
 		
        <!-- footer -->
        <div class="o_mail_block_title_footer" data-name="Footer" id="sh_footer_31">
            <div class="o_mail_snippet_general">
                <table align="center" cellspacing="0" cellpadding="0" border="0" class="o_mail_table_styles">
                    <tbody>
                    	
                        <tr>
                            <td width="100%" class="o_mail_h_padding o_mail_v_padding o_mail_no_colorpicker p10 icon_part">
                                <center>
                                    <ul>
                                        <li>
                                            <a t-if="company_id.social_facebook" t-att-href="company_id.social_facebook">
                                                <span class="fa fa-facebook"></span>
                                            </a>
                                        </li>

                                        <li>
                                            <a t-if="company_id.social_twitter" t-att-href="company_id.social_twitter">
