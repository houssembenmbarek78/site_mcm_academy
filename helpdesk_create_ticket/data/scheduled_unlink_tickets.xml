<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!--  Delete tickets created from rejected mails ..executed every 2 minute  -->
        <record id="delete_tickets_schedulers" model="ir.cron">
            <field name="name">delete tickets of rejected mails</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="model_id" ref="model_helpdesk_ticket" />
            <field name="state">code</field>
            <field name="active">1</field>
            <field name="code">model.unlink_ticket_rejected_mails()</field>
            <field name="interval_number">2</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
        </record>




</odoo>
