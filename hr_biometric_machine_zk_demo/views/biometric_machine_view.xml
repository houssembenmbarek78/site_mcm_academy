<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_zk_machine_demo_udp_form" model="ir.ui.view">
		<field name="name">zk.machine.form</field>
		<field name="model">zk.machine.demo.udp</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
		<form string="Zk Machine">
			<header>
				<button name="try_connection" type="object" string="Try connection"/>


			</header>


			<sheet>
				<div class="oe_left">
					<h1>
						<field name="name" required="1" placeholder="Machine IP"/>
					</h1>
				</div>
				<br/><br/><br/>
				<group col="4"  colspan="4"> 
					<field name="port" required="1"/>
				</group>
			</sheet>
		</form>
		</field>
	</record>

		<record id="view_zk_machine_attendance_form" model="ir.ui.view">
		<field name="name">zk.attendance.form</field>
		<field name="model">attendance.log</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
		<form string="Zk Attendance">
			<header>
				<button name="download_data" type="object" string="Download Data"/>

			</header>


			<sheet>
				<div class="oe_left">
					<h1>
						<field name="name" required="1" placeholder="User Id"/>
					</h1>
				</div>
				<br/><br/><br/>
				<group col="4"  colspan="4">
					<field name="status" required="1"/>
				</group>
			</sheet>
		</form>
		</field>
	</record>



	<record id="view_zk_machine_demo_udp_tree" model="ir.ui.view">
		<field name="name">zk.machine.tree</field>
		<field name="model">zk.machine.demo.udp</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Zk Machine">
				<field name="name"/>
			</tree>
		</field>
	</record>

	
	<record id="attendance_machine_demo_udp_action" model="ir.actions.act_window">
            <field name="name">Attendances</field>
            <field name="res_model">zk.machine.demo.udp</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
	</record>

	<record model="ir.ui.view" id="attendance_tree_view">
            <field name="name">attendance.tree</field>
            <field name="model">attendance.log</field>


            <field name="arch" type="xml">
                <tree string="Attendance Tree">
					<button name="download_data" type="object" string="Download Data"/>
					<field name="name"/>
                    <field name="status"/>
					<field name="date"/>
					<field name="checkin"/>
					<field name="checkout"/>

                </tree>
            </field>
	</record>

		<record model="ir.actions.act_window" id="attendance_list_action">
            <field name="name">Attendance</field>
            <field name="res_model">attendance.log</field>
            <field name="view_mode">tree,form</field>
        </record>

    	<menuitem id="attendance_machine_menu_demo_udp" name="Attendance Machine"  parent="hr.menu_hr_root" sequence="20"/>
	 	<menuitem id="Device_menu" name="Device Configuration"
                  parent="attendance_machine_menu_demo_udp"
                  action="attendance_machine_demo_udp_action"/>

		<menuitem id="attendance_menu" name="Attendance"
                  parent="attendance_machine_menu_demo_udp"
                  action="attendance_list_action"/>
	
	
        
     </data>
</odoo>

