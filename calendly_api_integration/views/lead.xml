<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mcm_calendly_crm_case_form_view_oppor" model="ir.ui.view">
        <field name="name">crm.lead.oppor.inherited.crm</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="sale_crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_sale_quotations_new']" position="replace">
            </xpath>
            <xpath expr="//button[@name='action_view_sale_quotation']" position="replace">
            </xpath>
            <xpath expr="//button[@name='action_view_sale_order']" position="replace">
            </xpath>
        </field>
    </record>

    <record id="mcm_calendly_website_crm_crm_lead_view_form" model="ir.ui.view">
        <field name="name">crm.lead.view.form.inherit.website.crm</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="website_crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_redirect_to_page_views']" position="replace">
            </xpath>
        </field>
    </record>

    <record id="mcm_calendly_view_crm_lead_form" model="ir.ui.view">
        <field name="name">crm.lead.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="before">
                <group string="Calendly info">
                    <field name="uuid" invisible="1"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="start_time"/>
                    <field name="end_time"/>
                    <field name="type_evenement"/>
                    <field name="partner_id" invisible="1"/>
                    <field name="team_id" invisible="1"/>
                </group>
                <div class="row">
                    <div class="col-2">
                    </div>
                    <div class="col-8">
                        <label for="partner_ids" string="Invitées"/>
                        <field name="partner_ids" string="Invitées" mode="tree,kanban">
                            <tree>
                                <control>
                                    <create name="add_line_control" string="Ajouter un invité"/>
                                </control>
                                <field name="name"/>
                                <field name="formation_type"/>
                                <field name="funding_type"/>
                                <field name="city"/>
                                <field name="note_exam"/>
                            </tree>
                        </field>
                    </div>
                    <div class="col-2">
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[hasclass('oe_title')]//label[1]" position="replace">
                <label for="name" class="oe_edit_only" string="Nom de session"
                       attrs="{'invisible': [('type', '=', 'opportunity')]}"/>
            </xpath>
            <xpath expr="//sheet//group" position="replace">
            </xpath>
            <xpath expr="//div[@name='button_box']" position="replace">
            </xpath>
            <xpath expr="//div[hasclass('oe_title')]//h2" position="replace">
            </xpath>
            <xpath expr="//header" position="replace">
            </xpath>
        </field>
    </record>

    <record id="mcm_calendly_view_crm_lead_kanban" model="ir.ui.view">
        <field name="name">crm.lead.kanban.lead</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_kanban_content')]" position="replace">
                <div class="oe_kanban_content">
                    <div>
                        <strong class="o_kanban_record_title" style="font-weight: bold; color: #3498DB;">
                            <field name="name"/>
                        </strong>
                    </div>
                    <div>
                        <field name="invitees_active"/>
                        sur
                        <field name="invitees_limit"/>
                        invités avec vous
                    </div>
                    <div>
                        <field name="start_time"/>
                        -
                        <field name="end_time"/>
                    </div>
                    <div>
                        <field name="start_date"/>
                    </div>
                    <div>
                        <span class="text-left">Type d'événement :</span>
                        <span class="text-right">
                            <b>
                                <field name="type_evenement"/>
                            </b>
                        </span>
                    </div>
                    <div class="o_kanban_record_bottom">

                    </div>
                </div>

            </xpath>
        </field>
    </record>
</odoo>