<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mcmacademy_view_account_move_button_acompte" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
<!--            <xpath expr="//button[@name='action_reverse']" position="after">-->
<!--                <button name="action_create_acompte" id="account_invoice_acompte_btn" type="object"-->
<!--                        context="{'default_amount': amount_untaxed}"-->
<!--                        attrs="{'invisible': ['|', '|', ('state', '!=', 'posted'), ('invoice_payment_state', '!=', 'not_paid'), ('type', 'not in', ('out_invoice'))]}"-->
<!--                        string="Créer une facture d’acompte" groups="account.group_account_invoice"/>-->
<!--            </xpath>-->

            <xpath expr="//field[@name='amount_untaxed']" position="before">
                <field name="type_facture" invisible="1"/>
                <field name="methodes_payment" invisible="1"/>
                <label for="pourcentage_acompte" attrs="{'invisible': [('methodes_payment','=','cartebleu') or ('company_id','=','2')]}"/>
                <div class="oe_subtotal_footer_separator">
                    <field name="pourcentage_acompte" class="oe_inline" readonly="False"
                           attrs="{'invisible': [('methodes_payment','=','cartebleu') or ('company_id','=','2')]}" force_save="1"/>
                    <span attrs="{'invisible': [('methodes_payment','=','cartebleu') or ('company_id','=','2')]}">%</span>
                </div>

            </xpath>

            <xpath expr="//field[@name='amount_untaxed']" position="after">
                <field name="amount_paye" string = 'Payé'  force_save="1" attrs="{'invisible': [('methodes_payment','=','cartebleu')  or ('company_id','=','2')]}"/>
                <field name="restamount" force_save="1" attrs="{'invisible': [('methodes_payment','=','cartebleu')  or ('company_id','=','2') ]}"/>
            </xpath>
            <xpath expr="//notebook/page/group[1]" position="inside" attrs="{'invisible': [('methodes_payment','=','cartebleu')]}" invisible="True">
                <field name="amount_residual" class="oe_subtotal_footer_separator"
                       attrs="{'invisible': [('state', '=', 'draft')]}" force_save="1" invisible="True"/>
            </xpath>
            <xpath expr="//notebook/page/group[1]" position="inside" attrs="{'invisible': [('methodes_payment','=','cpf')]}" invisible="True">
                <field name="amount_untaxed" class="oe_subtotal_footer_separator"
                       attrs="{'invisible': [('state', '=', 'draft')]}" force_save="1" invisible="True"/>
            </xpath>
<!--            <xpath expr="//notebook/page/group[2]" position="before" attrs="{'invisible': [('type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund'))]}">-->
<!--                <field name="session_id" class="other_info"-->
<!--                       attrs="{'invisible': [('state', '=', 'draft')]}"/>-->
<!--            </xpath>-->

        </field>
    </record>
</odoo>